<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="70dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/tvLandStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="14dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        tools:text="询价中" />

    <TextView
        android:id="@+id/tvFixLandNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="询价编号:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvLandNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12sp"
        android:layout_toLeftOf="@id/tvLandStatus"
        android:layout_toRightOf="@id/tvFixLandNum"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        tools:text="10000" />

    <TextView
        android:id="@+id/tvFixPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFixLandNum"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="14dp"
        android:text="询价价格:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvInquiryPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFixLandNum"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@id/tvLandStatus"
        android:layout_toRightOf="@+id/tvFixPrice"
        android:textColor="@color/Orange"
        android:textSize="14sp"
        tools:text="10000π" />

</RelativeLayout>